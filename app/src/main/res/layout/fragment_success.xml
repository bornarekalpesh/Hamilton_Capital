<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragment.FragmentSuccess">

        <!-- TODO: Update blank fragment layout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="20dp"
                android:src="@drawable/ic_reshot_icon_tick_6gv9j745fw" />

            <TextView
                android:id="@+id/message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:text="Great now you have 178 USD in your Account"
                android:textColor="@color/black"
                android:textSize="36dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:lineSpacingExtra="10dp"
                android:text="Your Conversation Rate was 1/1.22"
                android:textColor="@color/black"
                android:textSize="30dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/reuse"
                android:layout_width="wrap_content"
                android:text="Convert Again"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </RelativeLayout>
</layout>