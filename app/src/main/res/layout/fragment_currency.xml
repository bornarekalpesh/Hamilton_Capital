<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

   <ScrollView
       android:layout_width="match_parent"
       android:fillViewport="true"
       android:layout_height="match_parent">
       <RelativeLayout
           android:layout_width="match_parent"
           android:orientation="vertical"
           android:weightSum="3"
           android:layout_height="match_parent"
           tools:context=".fragment.FragmentRate">

           <ImageView
               android:id="@+id/iv_back"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:padding="20dp"
               android:src="@drawable/back_arrow"></ImageView>

           <LinearLayout
               android:id="@+id/lay_tv"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_centerInParent="true"
               android:layout_marginTop="150dp"
               android:orientation="vertical"
               android:padding="20dp">

               <TextView
                   android:id="@+id/currency1Name"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center"
                   android:padding="10dp"
                   android:text="150GPD"
                   android:textColor="@color/black"
                   android:textSize="80dp"
                   android:textStyle="bold" />

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center"
                   android:text="Preceds"
                   android:textColor="@android:color/darker_gray"
                   android:textSize="32dp"
                   android:textStyle="bold" />

               <TextView
                   android:id="@+id/currency2Name"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center"
                   android:gravity="center"
                   android:text="178USD"
                   android:textColor="@color/black"
                   android:textSize="40dp"
                   android:textStyle="bold" />

           </LinearLayout>


           <RelativeLayout
               android:id="@+id/lay_timmer"
               android:layout_below="@id/lay_tv"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">

               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_centerHorizontal="true"
                   android:orientation="horizontal">

                   <ImageView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_gravity="center"
                       android:layout_marginRight="10dp"
                       android:src="@drawable/ic_timmer" />

                   <TextView
                       android:id="@+id/counttime"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginRight="5dp"
                       android:text="29"
                       android:textSize="40dp" />

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Sec Left"
                       android:textSize="20dp" />
               </LinearLayout>

           </RelativeLayout>

           <com.google.android.material.button.MaterialButton
               android:id="@+id/btn_convert"
               android:layout_width="250dp"
               android:layout_height="wrap_content"
               android:layout_below="@id/lay_timmer"
               android:layout_centerHorizontal="true"
               android:layout_gravity="center"
               android:layout_marginTop="50dp"
               android:backgroundTint="#ec5e66"
               android:text="Convert" />


       </RelativeLayout>
   </ScrollView>
</layout>